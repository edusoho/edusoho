<div class="modal cd-modal in js-score-modal" aria-hidden="true">
  <div class="modal-dialog cd-modal-dialog" data-clear="{{ closeClear|default(0) }}">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          <i class="cd-icon cd-icon-close"></i>
        </button>
        <h4 class="modal-title">{{ 'my.teaching.question_bank.question.set_score'|trans }}</h4>
      </div>

      <div class="modal-body">
        <form class="form-horizontal subject-state-form mt20" id="batch-set-score-form">
          <div class="form-group cd-mb24">
            <div class="col-md-3 control-label subject-state-form__label">
              <label class="control-label-required" for="score">{{ 'course.testpaper_manage.question.score'|trans }}</label>
            </div>
            <div class="col-md-9 controls pl0">
              <input id="score" type="text" class="form-control" name="score" required="required">
            </div>
          </div>
          <div class="form-group hidden js-miss-score-field cd-mb24">
            <div class="col-md-3 control-label subject-state-form__label">
              <label for="missScore">{{ 'course.testpaper_manage.import.re_edit.miss_score'|trans }}</label>
            </div>
            <div class="col-md-9 controls pl0">
              <input id="missScore" type="text" class="form-control" name="missScore">
            </div>
          </div>
        </form>
      </div>

      <div class="modal-footer">
        <button type="button" class="cd-btn cd-btn-link-default" data-dismiss="modal">{{ 'form.btn.cancel'|trans }}</button>
        <button type="button" class="btn cd-btn cd-btn-primary js-batch-score-confirm">{{ 'form.btn.confirm'|trans }}</button>
      </div>
    </div>
  </div>
</div>