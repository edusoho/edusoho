{% extends 'TopxiaWebBundle:CourseManage:layout.html.twig' %}

{% block title %}{% if homework|default(null) %}编辑{% else %}添加{% endif %}作业 - {{ parent() }}{% endblock %}

{% set side_nav = 'lesson' %}
{% set script_controller = 'homework-manage/homework-modal' %}

{% block main %}
<div class="panel panel-default panel-col lesson-manage-panel" id="homework-items-manager">
	<div class="panel-heading">
		<ol class="breadcrumb">
			<li><a href="{{ path('course_manage_lesson',{id:course.id}) }}">课时管理</a></li>
			<li class="active">{% if homework|default(null) %}编辑{% else %}添加{% endif %}作业</li>
		</ol>
	</div>

	<div class="panel-body">
		<form class="form-horizontal">
      <div class="form-group">
        <div class="col-md-2 control-label"><label>课时名称</label></div>
        <div class="col-md-8 controls" style="margin-top:7px">
        {{ lesson.title }}
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-2 control-label"><label>作业说明</label></div>
        <div class="col-md-8 controls">
          <textarea name="description" rows="10" id="homework-about-field" class="form-control" data-image-upload-url="{{ path('editor_upload', {token:upload_token('course')}) }}" data-image-download-url="{{ path('editor_download', {token:upload_token('course')}) }}">{{ homework.description|default('') }}</textarea>
        </div>
      </div>

			{% if homework|default(null) %}
				<div class="col-md-offset-2 col-md-8 controls">
					<div class="btn btn-primary confirm-submit" id="save-homework-btn" data-saving-text="正在保存..." data-url="{{ path('course_manage_lesson_homework_edit',{ courseId:course.id, lessonId:lesson.id,homeworkId:homework.id }) }} " data-role="homework-edit">确定</div>
				</div>
			{% endif %}

	    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
		</form>

		{% if homework|default(null) is null %}
			<hr>
	    <div class="clearfix mbm">
	      <button  id="picker_homework_items" data-url="{{ path('course_manage_question_picker',{courseId:course.id}) }}" class="btn btn-info btn-sm pull-right" data-role="pick-item"　><span class="es-icon es-icon-anonymous-iconfont"  ></span> 选择题目</button>
	    </div>

    	<form id="homework-create-form" class="form-horizontal" method="post" >

				<table class="table table-striped table-hover tab-content" id="homework-table">
	        <thead>
	          <tr>
	          	<th></th>
	            <th><input type="checkbox" data-role="batch-select"></th>
	            <th>题号</th>
	            <th width="40%">题干</th>
	            <th>类型</th>
	            <th>难度</th>
	            <th width="25%">操作</th>
	          </tr>
	        </thead>
					<tbody id="homework-table-tbody" >
						{% if questions|default(null) %}
							{% for key,homeworkItem in homeworkItems %}
								{% set questionId = homeworkItem.questionId %}
								{% set question = questions[questionId] %}
								{% include 'TopxiaWebBundle:CourseHomeworkManage:homework-item-tr.html.twig'%}
							{% endfor %}
						{% endif %}
					</tbody>	
	      </table>

	      <div>
	        <label class="checkbox-inline"><input type="checkbox" data-role="batch-select"> 全选</label>
	        <button type="button" class="btn btn-default btn-sm mlm" data-role="batch-delete"  data-name="题目">删除</button>
	      </div>

				<div id="homework_items_help" class="help-block" style="display:none;">请选择题目</div>
				
				<div class="form-group">
					<div class="col-md-12 controls correctPercentDiv"></div>
					<div class="help-block col-md-12 correct_percent_help"></div>
				</div>
			
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

			  <div class="form-group">
					<div class="col-md-8 controls">
						<p class="help-block">提示：作业保存以后将会添加到课时中去，作业一旦保存将不能修改。</p>
					</div>
					<div class="col-md-4 controls">
						{# <div class="btn btn-primary pull-right mlm request-save">保存</div> #}
						
						<div class="btn btn-primary pull-right mlm request-save" id="save-homework-btn" data-saving-text="正在保存..." data-url="{% if homework|default(null) %}{{ path('course_manage_lesson_homework_edit',{ courseId:course.id, lessonId:lesson.id,homeworkId:homework.id }) }} {% else %}{{ path('course_manage_homework_create',{ courseId:course.id, lessonId:lesson.id }) }} {% endif %}">保存</div>
					</div>
				</div>
		  </form>
  	{% endif %}
	</div>

	<div id="homework-confirm-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h4 class="modal-title">作业确认信息</h4>
	      </div>
	      <div class="modal-body">
	        <p class="help-block"><span class="color-danger">提示</span>：作业保存以后将会添加到课时中去，作业一旦保存将不能修改。</p>
	        <p>添加课后作业的课时应酌情增加学习时长用于完成作业</p>
	      </div>
	      <div class="modal-footer">
	        <button class="btn btn-link" data-dismiss="modal" type="button">关闭</button>
	        <button type="button" class="btn btn-primary confirm-submit" data-saving-text="正在保存..." data-url="{% if homework|default(null) %}{{ path('course_manage_lesson_homework_edit',{ courseId:course.id, lessonId:lesson.id,homeworkId:homework.id }) }} {% else %}{{ path('course_manage_homework_create',{ courseId:course.id, lessonId:lesson.id }) }} {% endif %}">确定</button>
	      </div>
	    </div>
	  </div>
	</div>

</div>

{% endblock %}