<form class="js-student-from" id="overview-student-detail">
    <span class="select-content bottom-border">
        <select name="orderBy" class="select-time-select">
          <option value="joinTimeDesc">{{ 'join.time'|trans }} ↓</option>
          <option value="joinTimeAsc">{{ 'join.time'|trans }} ↑</option>
          <option value="CompletionRateDesc">{{ 'classroom.manage.data_statistics.student_detail_list.select_finish_rate'|trans }} ↓</option>
          <option value="CompletionRateAsc">{{ 'classroom.manage.data_statistics.student_detail_list.select_finish_rate'|trans }} ↑</option>
        </select>
        <i class="es-icon es-icon-arrowdropdown"></i>
    </span>
  <span class="select-content bottom-border">
        <select class="select-time-select" name="filter">
          <option value ="all">{{ 'classroom.manage.data_statistics.student_detail_list.select_all'|trans }}</option>
          <option value ="unFinished">{{ 'classroom.manage.data_statistics.student_detail_list.select_un_finished'|trans }}</option>
          <option value ="unLearnedSevenDays">{{ 'classroom.manage.data_statistics.student_detail_list.select_un_learn_seven_days'|trans }}</option>
        </select>
        <i class="es-icon es-icon-arrowdropdown"></i>
    </span>
  <span class="select-content">
        <input class="select-time-input js-name-search" type="text" name="nameOrMobile" placeholder="{{ 'classroom.manage.data_statistics.name_or_mobile_placeholder'|trans }}">
        <i class="es-icon es-icon-search"></i>
    </span>
  <input type="hidden" name="classroomId" value="{{ classroom.id }}">
  <button class=" cd-btn  mhs cd-btn-sm pull-right cd-btn-primary classroom-student-chart-js-export-btn" type="button" id="student-add-btn"><i class="es-icon es-icon-filedownload cd-text-sm"></i> {{'form.btn.export'|trans}}</button>
</form>
<button class="btn btn-primary pull-right hide">{{ 'form.btn.export'|trans }}</button>
<div id="student-detail-chart"
     data-form=".js-student-from"
     class="detail-chart-container chart-container mtl text-sm clearfix" data-url="{{ path('classroom_data_statistics_student_detail', {id: classroom.id}) }}">
</div>