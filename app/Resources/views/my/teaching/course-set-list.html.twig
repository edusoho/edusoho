{% extends 'courseset-manage/header.html.twig' %}

{% block js %}
{% endblock %}

{% block coursesetTitle %}
  {% if courseSet.status == 'published' %}
    <a class="cd-link-major" href="{{ path('course_show',{id: courseSet.defaultCourseId}) }}" title="{{ courseSet.title }}">{{ courseSet.title }}</a>
  {% else %}
    <a class="cd-link-major" href="{{ path('course_show', {id: courseSet.defaultCourseId, previewAs: 'member'}) }}"  title="{{ courseSet.title }}">{{ courseSet.title }}</a>
  {% endif %}
{% endblock %}

{% block courseTitle %}
  {{ courseSet.courseNum|default(0) }}
{% endblock %}

{% block btn %}
  <a class="cd-btn cd-btn-ghost-primary" target="_blank" href="{{ courseSet.redirect_path }}">{{ 'course.manage_btn'|trans }}</a>
{% endblock %}

{% block close %}
{% endblock %}

