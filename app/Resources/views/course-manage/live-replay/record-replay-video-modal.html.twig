{% import "macro.html.twig" as web_macro %}

{% do script(['app/js/course-manage/live-replay/record-video/index.js']) %}

<div class="modal-dialog {% if modal_class|default('') %} {{ modal_class }}{% endif %}" data-clear="{{ closeClear|default(0) }}">
  <div role="document" class="ant-modal" style="width: 640px; transform-origin: 689px -48px;">
    <div tabindex="0" aria-hidden="true" style="width: 0px; height: 0px; overflow: hidden;"></div>
    <div class="ant-modal-content">
      <button type="button" data-dismiss="modal" aria-hidden="true" class="ant-modal-close">
        <span class="ant-modal-close-x">
          <span role="img" aria-label="close" class="anticon anticon-close ant-modal-close-icon">
            <svg focusable="false" class="" data-icon="close" width="1em" height="1em" fill="currentColor" aria-hidden="true" viewBox="64 64 896 896">
              <path d="M563.8 512l262.5-312.9c4.4-5.2.7-13.1-6.1-13.1h-79.8c-4.7 0-9.2 2.1-12.3 5.7L511.6 449.8 295.1 191.7c-3-3.6-7.5-5.7-12.3-5.7H203c-6.8 0-10.5 7.9-6.1 13.1L459.4 512 196.9 824.9A7.95 7.95 0 00203 838h79.8c4.7 0 9.2-2.1 12.3-5.7l216.5-258.1 216.5 258.1c3 3.6 7.5 5.7 12.3 5.7h79.8c6.8 0 10.5-7.9 6.1-13.1L563.8 512z"></path></svg>
          </span>
        </span>
      </button>
      <div class="ant-modal-header">
        <div class="ant-modal-title" id="rcDialogTitle0">{{ 'live_course.record_replay'|trans }}</div>
      </div>
      <div class="ant-modal-body">
        <div class="ant-alert ant-alert-info" data-show="true" style="margin-bottom: 10px;">
          <span role="img" aria-label="info-circle" class="anticon anticon-info-circle ant-alert-icon">
            <svg focusable="false" class="" data-icon="info-circle" width="1em" height="1em" fill="currentColor" aria-hidden="true" viewBox="64 64 896 896">
              <path d="M512 64C264.6 64 64 264.6 64 512s200.6 448 448 448 448-200.6 448-448S759.4 64 512 64zm32 664c0 4.4-3.6 8-8 8h-48c-4.4 0-8-3.6-8-8V456c0-4.4 3.6-8 8-8h48c4.4 0 8 3.6 8 8v272zm-32-344a48.01 48.01 0 010-96 48.01 48.01 0 010 96z"></path>
            </svg>
          </span>
          <div class="ant-alert-content"><div class="ant-alert-message">{{ 'live_course.record_replay.tips'|trans }}</div>
            <div class="ant-alert-description"><!----></div>
          </div><!---->
        </div>
        <div class="ant-radio-group ant-radio-group-outline ant-radio-group-default" style="margin: 10px 0px;">
          <label class="js-img-radio ant-radio-wrapper" style="line-height: 32px;">
            <span class="js-active ant-radio ant-radio-checked">
              <input type="radio" class="ant-radio-input js-input" value="1">
              <span class="ant-radio-inner"></span>
            </span>
            <span class="js-active ant-radio-checked">
              <img src="{{ asset('static-dist/app/img/course-manage/record_video_1.png') }}">
              <br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ 'live_course.record_replay.select1'|trans }} </span>
          </label>
          <label class="js-img-radio  ant-radio-wrapper" style="line-height: 32px; color: inherit;">
            <span class="js-active ant-radio">
              <input type="radio" class="ant-radio-input js-input" value="2">
              <span class="ant-radio-inner"></span>
            </span>
            <span class="js-active">
              <img src="{{ asset('static-dist/app/img/course-manage/record_video_2.png') }}">
              <br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ 'live_course.record_replay.select2'|trans }}
            </span>
          </label>
          <label class="js-img-radio ant-radio-wrapper" style="line-height: 32px;margin-right: 0px !important; color: inherit;">
            <span class="js-active ant-radio">
              <input type="radio" class="ant-radio-input js-input" value="3">
              <span class="ant-radio-inner"></span>
            </span>
            <span class="js-active">
              <img src="{{ asset('static-dist/app/img/course-manage/record_video_3.png') }}">
              <br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ 'live_course.record_replay.select3'|trans }}
            </span>
          </label>
        </div>
      </div>
      <div class="ant-modal-footer">
        <div>
          <button class="ant-btn" data-dismiss="modal" aria-hidden="true" type="button"><!---->
            <span>{{'form.btn.cancel'|trans}}</span>
          </button>
          <button class="ant-btn ant-btn-primary js-submit-button" data-url="{{ path('live_activity_replay_url',{courseId:courseId,activityId:activityId,replayId:replayId}) }}" type="button">
            <!----><span>{{'live_course.record_replay.btn'|trans}}</span>
          </button></div>
      </div>
    </div>
    <div tabindex="0" aria-hidden="true" style="width: 0px; height: 0px; overflow: hidden;">

    </div>
  </div>
<style>
  .ant-radio-checked {
    color: #46C37B;
  }
</style>
  {% include 'js_loader_async.html.twig' %}
</div>