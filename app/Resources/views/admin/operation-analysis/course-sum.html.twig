{% extends 'admin/operation-analysis/analysis-base-layout.html.twig' %}
{% set script_controller = 'analysis/course-sum' %}
{% set href="admin_operation_analysis_course_sum" %}
{% set menu = 'course-sum' %}
{% block analysisBody %}
  <div class="col-md-12">

    {% if tab=="trend" %}
      <div id="line-data"></div>
      <input id="data" type="hidden" value='{% if data %}{{ data }}{% endif %}'>
      <input id="courseSumStartDate" type="hidden" value='{% if courseSumStartDate %}{{ courseSumStartDate }}{% endif %}'>
    {% elseif tab=="detail" %}
      {% include 'admin/operation-analysis/course-sum.table.html.twig' %}
    {% endif %}
  </div>
{% endblock %}
