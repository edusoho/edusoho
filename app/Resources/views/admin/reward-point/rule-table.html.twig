      <span class="es-switch {% if rewardPoint.create_question['enable'] %}is-active{% endif %}">
        <input class="es-switch__input" type="text" name="create_question[enable]" value="{{ rewardPoint.create_question['enable'] }}" data-close="0" data-open="1">
      </span>
    </td>
    <td>
      <input class="form-control reward-point-amount" name="create_question[amount]" type="text" value="{{ rewardPoint.create_question['amount'] }}">
    </td>
    <td>
      <input class="form-control reward-point-daily-limit" name="create_question[daily_limit]" type="text" value="{{ rewardPoint.create_question['daily_limit'] }}">
    </td>
  </tr>
