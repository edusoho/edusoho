  </tr>

  <tr>
    <th>{{'admin.user.fields.about_label'|trans}}</th>
    <td>
    {% if profile.about %}
      <div class="editor-text">
        {{ profile.about|cdn|raw }}
      </div>
      {% else %}
        {{'admin.user.fields.empty'|trans}}
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>{{'admin.user.manage.user_show.fields.personal_website_label'|trans}}</th>
