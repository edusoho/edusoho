  <tr>
    <th>{{'user.fields.company_label'|trans}}</th>
    <td>
      {% if profile.company %}
        {{ profile.company }}
      {% else %}
        {{'admin.user.fields.empty'|trans}}
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>{{'admin.user.fields.job_label'|trans}}</th>
    <td>
      {% if profile.job %}
        {{ profile.job }}
      {% else %}
        {{'admin.user.fields.empty'|trans}}
      {% endif %}
    </td>
  </tr>


  <tr>
    <th>{{'admin.user.fields.title_label'|trans}}</th>
