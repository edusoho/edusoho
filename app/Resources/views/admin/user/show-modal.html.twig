      {% endif %}
    </td>
  </tr>

  <tr>
    <th>{{'user.fileds.wechat'|trans}}</th>
    <td>
      {% if profile.weixin %}
        {{ profile.weixin }}
      {% else %}
        {{'admin.user.fields.empty'|trans}}
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>{{ 'user.fileds.qq'|trans }}</th>
    <td>
      {% if profile.qq %}
        {{ profile.qq }}
      {% else %}
