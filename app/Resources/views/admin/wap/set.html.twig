{% extends 'admin/layout.html.twig' %}

{% set menu = 'admin_wap_set' %}

{% block main %}

  {{ web_macro.flash_messages() }}

  <form class="form-horizontal" method="post" id="wap-setting-form" novalidate>
    <div class="row form-group">
      <div class="col-md-2 control-label">
        <label>{{'admin.wap_setting'|trans}}</label>
      </div>
      <div class="controls col-md-7 radios">
        {{ radios('enabled', {1:'form.radio_btn.open'|trans, 0:'form.radio_btn.close'|trans}, wapSetting.enabled) }}
        {{ 'admin.wap_setting.hint'|trans|raw }}
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-3 control-label"></div>
      <div class="controls col-md-8">
        <button type="submit" class="btn btn-primary">{{'form.btn.submit'|trans}}</button>
      </div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
{% endblock %}