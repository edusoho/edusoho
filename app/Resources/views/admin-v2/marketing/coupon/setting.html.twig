{% extends 'admin-v2/layout.html.twig' %}
{% set script_controller = 'coupon/setting' %}

{% set menu = 'admin_v2_coupon_setting' %}
{% block main %}
	{{ web_macro.flash_messages() }}

	<form class="form-horizontal" method="post" id="coupon-setting-form" action="{{ path('admin_v2_coupon_setting') }}" novalidate>
	  <div class="row form-group">
	    <div class="col-md-2 control-label">
	      <label >{{ 'coupon.setting.status'|trans }}</label>
	    </div>
	    <div class="controls col-md-7 radios">
	      {{ radios('enabled', {1:'form.radio_btn.open'|trans, 0:'form.radio_btn.close'|trans}, couponSetting.enabled|default(1)) }}
	    </div>
	  </div>

	  <div class="row form-group">
	    <div class="col-md-2 control-label"></div>
	    <div class="controls col-md-8">
	      <a class="btn btn-primary js-submit">{{ 'form.btn.submit'|trans }}</a>
	    </div>
	  </div>

	  <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
	</form>

{% endblock %}