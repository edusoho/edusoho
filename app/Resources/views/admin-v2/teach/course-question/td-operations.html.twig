      <button class="btn btn-default btn-sm" data-role="item-delete" data-name="{{'admin.course_question.td_operations.dropdown.delete_question_btn'|trans}}" data-url="{{ path('admin_v2_course_thread_delete', {id:question.id}) }}">{{'form.btn.delete'|trans}}</button>
      
