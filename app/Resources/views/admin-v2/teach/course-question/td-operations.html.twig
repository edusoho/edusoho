          <li>
            <a class="btn" data-role="item-delete" data-name="{{'admin.course_question.td_operations.dropdown.delete_question_btn'|trans}}" data-url="{{ path('admin_v2_course_thread_delete', {id:question.id}) }}">
              <span class="glyphicon glyphicon-trash"></span> {{'admin.course_question.td_operations.dropdown.delete_question_btn'|trans}}</a>
