{% extends 'admin-v2/layout.html.twig' %}
	 {% set menu = 'admin_v2_cloud_file_setting' %}
	 {%  do script(['app/js/admin-v2/edu-cloud/file-setting/index.js'])  %}
	 {% block main %}
     <div class="edu-service">
       <div class="edu-balance">
         {{ web_macro.flash_messages() }}
         <form id="cloud-resource" class="form-horizontal" method="post" data-widget-cid="widget-0">
           <div class="form-group">
             <div class="col-md-3 control-label">
               <label>{{ 'admin.edu_cloud.edu_file.download.setting'|trans }}</label>
             </div>
             <div class="controls col-md-8 radios">
               <label>
                 <input type="radio" name="enable"
                        value="1" {% if cloudFileSetting.enable %} checked {% endif %}> {{ 'admin.edu_cloud.edu_file.open_radio'|trans }}
               </label>
               <label>
                 <input type="radio" name="enable"
                        value="0" {% if not cloudFileSetting.enable %} checked {% endif %}>{{ 'admin.edu_cloud.edu_file.close_radio'|trans }}
               </label>
             </div>
             <div class="help-block col-md-8 col-md-offset-3">
                 <span id="enableTips" {% if not cloudFileSetting.enable %} hidden {% endif %}>{{ 'admin.edu_cloud.edu_file.download.setting.enable.tips'|trans }}</span>
                 <span id="disableTips" {% if cloudFileSetting.enable %} hidden {% endif %}>{{ 'admin.edu_cloud.edu_file.download.setting.disable.tips'|trans }}</span>
               </div>
           </div>
           <div class="row form-group">
             <div class="controls col-md-offset-3 col-md-8">
               <button type="submit" class="btn btn-primary">{{ 'form.btn.submit'|trans }}</button>
             </div>
           </div>
           <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
         </form>
       </div>
     </div>
   {% endblock %}