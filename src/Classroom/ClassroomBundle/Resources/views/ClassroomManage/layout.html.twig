{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}{{ setting('classroom.name')|default("班级") }}管理 - {{ parent() }}{% endblock %}

{% block content %}

  {% include ('ClassroomBundle:ClassroomManage:header.html.twig') %}

<div class="row">
  <div class="col-md-3">
    {% block side %}
      {% set side_nav = side_nav|default(null) %}
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="list-group-panel">
            <div class="list-group">
              <a class="list-group-item {% if side_nav == 'main' %}active{% endif %}" href="{{ path('classroom_manage', {id:classroom.id}) }}">管理首页</a>
            </div>
          </div>

          <div class="list-group-panel">
            <div class="list-group-heading">{{ setting('classroom.name')|default("班级") ~ '设置' }}</div>
            <div class="list-group">
              <a class="list-group-item {% if side_nav == 'base' %}active{% endif %}" href="{{ path('classroom_manage_set_info', {id:classroom.id}) }}">基本信息 {% if classroom.about is empty %}<span class="label label-info">未完善</span>{% endif %}</a>
              <a class="list-group-item {% if side_nav == 'price' %}active{% endif %}" href="{{ path('classroom_manage_set_price', {id:classroom.id}) }}">价格设置</a>
              <a class="list-group-item {% if side_nav == 'picture' %}active{% endif %}" href="{{ path('classroom_manage_set_picture', {id:classroom.id}) }}">封面图片 {% if classroom.smallPicture is empty %}<span class="label label-info">未设置</span>{% endif %}</a>
              <a class="list-group-item {% if side_nav == 'service' %}active{% endif %}" href="{{ path('classroom_manage_service', {id:classroom.id}) }}">服务设置</a>
              <a class="list-group-item {% if side_nav == 'headTeacher' %}active{% endif %}" href="{{ path('classroom_manage_headteacher', {id:classroom.id}) }}">班主任设置</a>
              <a class="list-group-item {% if side_nav == 'teachers' %}active{% endif %}" href="{{ path('classroom_manage_teachers', {id:classroom.id}) }}">老师设置</a>
              <a class="list-group-item {% if side_nav == 'assistant' %}active{% endif %}" href="{{ path('classroom_manage_assistants', {id:classroom.id}) }}">助教设置</a>
            </div>
          </div>

          <div class="list-group-panel">
            <div class="list-group-heading">{{ setting('classroom.name')|default("班级") ~ '管理' }}</div>
            <div class="list-group">
              <a class="list-group-item {% if side_nav == 'courses' %}active{% endif %}" href="{{ path('classroom_manage_courses', {id:classroom.id}) }}">课程管理</a>
              <a class="list-group-item {% if side_nav == 'students' %}active{% endif %}" href="{{ path('classroom_manage_students', {id:classroom.id}) }}">学员管理</a>
            </div>
          </div>
        </div>

      </div>
    {% endblock %}
  </div>
  <div class="col-md-9">
    {% block main %}{% endblock %}
  </div>
</div>
{% endblock %}