    <div class="media">
      <div class="media-left">
        <a href="#">
          <img src="{{filepath(groupinfo.logo, 'group.png')}}" alt="" class="group-avatar-sm" >
        </a>
      </div>
      <div class="media-body">
        <h2 class="media-heading">{{groupinfo.title}}</h2>
        <div class="media-metas">
          {{groupinfo.memberNum}}个成员
        </div>
      </div>
    </div>
  </div>
</div>