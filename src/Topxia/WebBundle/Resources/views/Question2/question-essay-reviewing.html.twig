{% extends 'TopxiaWebBundle:Question2:question-base-layout.html.twig' %}

{% block heading %}
  {{ question.stem|fill_question_stem_html|bbCode2Html|raw }}
{% endblock %}

{% block body %}

<div class="question-eassy-form-control">
	<div class="question-eassy-answer">学员回答:</div>
	<strong>{% if itemResult.answer %}{{ itemResult.answer|raw }}{% else %}未回答{% endif %}</strong>

</div>
<div class="question-eassy-form-control">
	 {% for rightAnswer in question.answer %}
		   <div class="question-eassy-rightanswer">正确答案</div> <strong class="question-text-success">{{ rightAnswer|join(' 或 ') }}</strong>
	{% endfor %}

</div>


{% endblock %}

{% block footer %}
	{% if app.user.isTeacher() %}
	<div  class="question-eassy-form-control question-teacher-say-input">
		<div class="teacher-say-text">评语:</div>
		<textarea class="form-control  teacher-say"  name="answer[{{ question.id }}]"  data-type="essay" data-question-id="{{ question.id }}"></textarea>
	</div>
	{% else %}
		<div class="question-score">
			<div class="question-result-title">老师正在批阅！</div>
		</div>
	{% endif %}
{% endblock %}