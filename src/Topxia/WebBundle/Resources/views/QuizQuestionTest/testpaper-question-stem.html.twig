<div class="testpaper-question-stem-wrap clearfix">
  <div class="testpaper-question-seq-wrap">
    <div class="testpaper-question-seq">{% if question.seq|default(null) %}{{ question.seq }}{% endif %}</div>
    <div class="testpaper-question-score">{{ question.itemScore|default(question.score) }}åˆ†</div>
  </div>
  {% if question.type == 'fill' %}
    <div class="testpaper-question-stem">{{ question.stem|fill_question_stem_html|bbCode2Html|raw }}</div>
  {% else %}
    <div class="testpaper-question-stem">{{ question.stem|bbCode2Html|raw }}</div>
    {% endif %}
</div>