<tr>
	<td>
		<a href="{% if status == 'reviewing' %}{{ path('course_manage_test_teacher_check', {id:paperResult.id}) }}{% endif %}{% if status == 'finished' %}{{ path('course_manage_test_results', {id:paperResult.id}) }}{% endif %}">{{ testpaper.name|plain_text(60) }}</a> 
		<br>
		<small class="text-muted">{{ '来自课程'|trans }}《{{ course.title }}》</small>
		<small class="text-muted mhs">•</small>
		<small class="text-muted">{{ '共%score%分'|trans({'%score%':testpaper.score}) }} / {{ testpaper.itemCount }}{{ '道题'|trans }}	</small>
	</td>
	<td>
		{{ web_macro.user_link(student) }} <br>
		<small class="text-muted">{{ paperResult.endTime|date("Y年n月d日 H:i") }} {{ '交卷'|trans }}</small>
	</td>
	<td>
		{% if status == 'reviewing' %}
			<a href="{{ path('course_manage_test_teacher_check', {id:paperResult.id}) }}" class="btn btn-default btn-sm pull-right" target="_blank">{{ '批阅'|trans }}</a>
		{% endif %}

		{% if status == 'finished' %}
		  <div>
		  	<div class="text-warning">{{ '总分'|trans }} <strong>{{ paperResult.score }}</strong> {{ '分'|trans }}</div>
				<div class="text-muted"><small>{{ '客观题'|trans }}{{ paperResult.objectiveScore }}{{ '分'|trans }} / {{ '主观题'|trans }}{{ paperResult.subjectiveScore }}{{ '分'|trans }}</small></div>
				<div class="text-success"><small>{{ teacher.nickname|default('系统') }} {{ '批于'|trans }}{{ paperResult.checkedTime|date("Y年n月d日 H:i") }}</small></div>
		  </div>
		{% endif %}
	</td>
</tr>