<div class="btn-group">

	<a href=" {{ url('admin_course', {filter: 'normal'}) }}" type="button" class="btn btn-default btn-sm {% if filter == 'normal'%}btn-primary{% endif %}">{{ '普通课程'|trans }}</a>

	<a href=" {{ url('admin_course', {filter: 'classroom'}) }}" type="button" class="btn btn-default btn-sm {% if filter == 'classroom' %}btn-primary{% endif %}">{{setting("classroom.name")|default("班级")}}课程</a>

	{% if is_plugin_installed('Vip') %}
		<a href=" {{ url('admin_course', {filter: 'vip'}) }}" type="button" class="btn btn-default btn-sm {% if filter == 'vip' %}btn-primary{% endif %}">{{'会员课程'|trans }}</a>
	{% endif %}
</div>