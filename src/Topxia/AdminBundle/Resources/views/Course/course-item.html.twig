<li data-course-id="{{course.id}}" class="course-grid related-course-grid" role="course-item" 
{% if not showDelBtn|default(false) %}
style="cursor:pointer"
{% endif %}>
	<div class="grid-body" style="position:relative">
  		<img src="{{ default_path('coursePicture',course.largePicture|default(null), 'large') }}" class="img-responsive thumb"/>
		<span class="title" style="max-height: 15px;overflow: hidden;line-height: 20px;">
		{{course.title}}
		</span>
		
		<button type="button" role="course-item-delete" data-course-id="{{course.id}}" {% if not showDelBtn|default(false) %}style="display:none"{% endif %} class="btn btn-xs btn-danger series-mode-label">删除</button>
		
	</div>
</li>