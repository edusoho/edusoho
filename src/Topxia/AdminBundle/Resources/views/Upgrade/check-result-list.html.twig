{% extends 'TopxiaAdminBundle:System:layout.html.twig' %}

{% block title %}安装与升级 - {{ parent() }}{% endblock %}

{% set menu = 'upgrade' %}
{% set tab = 'check-upgrade' %}

{% set script_controller = 'upgrade/check-result-list' %}

{% block main %}

<div class="page-header">
  <a class="btn btn-info btn-sm pull-right" 
  href="{{ path('admin_upgrade_check') }}"> 检查更新 </a>
	<h1>检查更新包</h1>
</div>

{% include 'TopxiaAdminBundle:Upgrade:upgrade-tab.html.twig' %}

<table id="check-result-table" class="table table-striped table-hover">

  <thead>
    <tr>
      <th width="2%">ID</th>
      <th width="15%">包名称</th>
      <th width="8%">包类型</th>
      <th width="12%">版本号</th>
      <th width="10%">重要等级</th>
      <th width="5%">作者</th>
      <th width="20%">说明</th>
      <th width="10%">操作</th>
    </tr>
  </thead>
  <tbody>

  	 {% for package in packages %}
        {% include 'TopxiaAdminBundle:Upgrade:check-result-list-tr.html.twig' %}
      {% else %}
      <tr><td colspan="10"><div class="empty">暂无可安装与升级的软件包</div></td></tr>
      {% endfor %}
      
  </tbody>

</table>

{% endblock %}